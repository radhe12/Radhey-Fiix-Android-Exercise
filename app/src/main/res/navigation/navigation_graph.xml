<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="fiix.challenge.fiixexercise.kotlinsample.ui.MainFragment"
        android:label="Questions"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_questionDetailFragment"
            app:destination="@id/questionDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionDetailFragment"
        android:name="fiix.challenge.fiixexercise.kotlinsample.ui.QuestionDetailFragment"
        android:label="Question And Answer"
        tools:layout="@layout/fragment_question_detail" />
</navigation>